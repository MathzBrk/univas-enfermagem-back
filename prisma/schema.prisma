generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  EMPLOYEE  // Funcionário comum (recebe vacinas)
  NURSE     // Enfermeiro (aplica vacinas)
  MANAGER   // Gestor (gerencia e gera relatórios)
}

enum SchedulingStatus {
  SCHEDULED   // Agendado
  CONFIRMED   // Confirmado
  CANCELLED   // Cancelado
  COMPLETED   // Concluído
}

enum ReportType {
  GENERAL           // Relatório geral do sistema
  BY_EMPLOYEE       // Relatório por funcionário
  BY_VACCINE        // Relatório por vacina
  BY_PERIOD         // Relatório por período
  COVERAGE          // Relatório de cobertura vacinal
}

// ============================================
// MODELS
// ============================================

model Employee {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  cpf       String   @unique
  phone     String?
  role      Role     @default(EMPLOYEE)

  // Professional data (for nurses)
  coren     String?  @unique // Registro profissional de enfermeiro

  // Timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  schedulingsReceived      VaccineScheduling[]   @relation("EmployeeSchedulings")
  applicationsReceived     VaccineApplication[]  @relation("EmployeeApplications")

  applicationsPerformed    VaccineApplication[]  @relation("NurseApplications")

  // Relationships - Relatórios gerados
  reportsGenerated         Report[]              @relation("EmployeeReports")

  @@map("employees")
}

model Vaccine {
  id                String   @id @default(uuid())
  name              String
  manufacturer      String
  description       String?
  dosesRequired     Int      @default(1) // Número de doses necessárias
  intervalDays      Int?     // Intervalo entre doses (em dias)

  // Stock control
  stockQuantity     Int      @default(0)
  minStockLevel     Int      @default(10)

  isObligatory      Boolean? 


  // Validity
  expirationDate    DateTime?

  // Timestamps
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  deletedAt         DateTime?

  // Relationships
  schedulings       VaccineScheduling[]
  applications      VaccineApplication[]

  @@map("vaccines")
}

model VaccineScheduling {
  id              String            @id @default(uuid())
  scheduledDate   DateTime
  status          SchedulingStatus  @default(SCHEDULED)
  doseNumber      Int               @default(1)
  notes           String?

  // Foreign Keys
  employeeId      String
  vaccineId       String

  // Timestamps
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt
  deletedAt       DateTime?

  // Relationships
  employee        Employee          @relation("EmployeeSchedulings", fields: [employeeId], references: [id])
  vaccine         Vaccine           @relation(fields: [vaccineId], references: [id])
  application     VaccineApplication?

  @@index([employeeId])
  @@index([vaccineId])
  @@index([scheduledDate])
  @@map("vaccine_schedulings")
}

model VaccineApplication {
  id                  String    @id @default(uuid())
  applicationDate     DateTime  @default(now())
  doseNumber          Int       @default(1)
  batchNumber         String    // Lote da vacina
  applicationSite     String    // Local de aplicação (braço direito, etc)
  observations        String?

  // Foreign Keys
  employeeId          String    // Quem recebeu a vacina
  vaccineId           String
  appliedById         String    // Enfermeiro que aplicou
  schedulingId        String?   @unique // Pode existir aplicação sem agendamento

  // Timestamps
  createdAt           DateTime  @default(now())
  updatedAt           DateTime  @updatedAt
  deletedAt           DateTime?

  // Relationships
  employee            Employee  @relation("EmployeeApplications", fields: [employeeId], references: [id])
  vaccine             Vaccine   @relation(fields: [vaccineId], references: [id])
  appliedBy           Employee  @relation("NurseApplications", fields: [appliedById], references: [id])
  scheduling          VaccineScheduling? @relation(fields: [schedulingId], references: [id])

  @@index([employeeId])
  @@index([vaccineId])
  @@index([appliedById])
  @@index([applicationDate])
  @@map("vaccine_applications")
}

model Report {
  id              String      @id @default(uuid())
  title           String
  type            ReportType
  description     String?
  fileUrl         String?     // URL do arquivo gerado (PDF, Excel, etc)

  // Period
  startDate       DateTime?
  endDate         DateTime?

  // Foreign Keys
  generatedById   String
  employeeId      String?     // Para relatórios específicos de um funcionário

  // Timestamps
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt
  deletedAt       DateTime?

  // Relationships
  generatedBy     Employee    @relation("EmployeeReports", fields: [generatedById], references: [id])

  @@index([generatedById])
  @@index([type])
  @@index([createdAt])
  @@map("reports")
}

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=univas_enfermagem
POSTGRES_PORT=5432

# Prisma Database URL
# Para desenvolvimento local com Docker:
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/univas_enfermagem?schema=public"

# Para produção ou quando rodar a app via Docker, use:
# DATABASE_URL="postgresql://postgres:postgres@postgres:5432/univas_enfermagem?schema=public"

# Application
NODE_ENV=development
APP_PORT=3000

# JWT Configuration (adicione uma secret key segura)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Application URL
APP_URL=http://localhost:3000
